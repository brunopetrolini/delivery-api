{
  "name": "node-template",
  "version": "0.0.3",
  "main": "index.js",
  "repository": "git@github.com:brunopetrolini/node-template.git",
  "author": "Bruno Petrolini <brunopetrolini@hotmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.x",
    "npm": ">=8.x"
  },
  "scripts": {
    "reinstall": "rimraf node_modules && npm install",
    "build": "rimraf dist && tsc",
    "start": "node dist/server.js",
    "dev": "tsnd src/server.ts",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm test -- --silent -c jest-unit.config.js",
    "test:integration": "npm test -- --silent -c jest-integration.config.js",
    "test:coverage": "npm test -- --coverage",
    "test:staged": "npm test -- --findRelatedTests",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.7",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "rimraf": "^3.0.2"
  }
}
