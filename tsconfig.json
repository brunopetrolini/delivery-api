{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src"]
}
